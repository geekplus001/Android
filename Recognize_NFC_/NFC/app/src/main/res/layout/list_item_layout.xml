        android:layout_weight="0.17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:id="@+id/textView_intro"
        android:layout_weight="0.17" />
</LinearLayout>
