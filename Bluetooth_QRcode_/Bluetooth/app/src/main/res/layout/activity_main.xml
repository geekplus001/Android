<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开蓝牙"
        android:id="@+id/button_open"
        android:onClick="openBlueToothClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭蓝牙"
        android:onClick="closeBlueToothClick"
        android:id="@+id/button_close"
        android:layout_below="@+id/button_open"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_open" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索蓝牙设备"
        android:id="@+id/button_scan"
        android:onClick="scanClick"
        android:layout_below="@+id/button_close"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务器端"
        android:onClick="serverClick"
        android:id="@+id/button_server"
        android:layout_below="@+id/button_scan"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_scan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端"
        android:id="@+id/button_client"
        android:onClick="clientClick"
        android:layout_below="@+id/button_server"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_server" />
</RelativeLayout>
