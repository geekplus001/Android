<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送一个一般通知"
        android:id="@+id/button_normal"
        android:onClick="sendNotification1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送一个大通知"
        android:onClick="sendNotification2"
        android:id="@+id/button_big"
        android:layout_below="@id/button_normal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送一个带进度条的通知"
        android:id="@+id/button_progress"
        android:onClick="sendNotification3"
        android:layout_below="@+id/button_big"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_big" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送一个自定义视图通知"
        android:id="@+id/button_custom"
        android:onClick="sendNotification4"
        android:layout_below="@+id/button_progress"
        android:layout_alignEnd="@+id/button_progress"
        android:layout_alignParentStart="true" />
</RelativeLayout>
